<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel='stylesheet' href="/bootstrap/dist/css/bootstrap.min.css" />
  <link rel='stylesheet' href="/@fortawesome/fortawesome-free/css/all.min.css" />
  <link rel='stylesheet' href='/Content/app.css' />
</head>
<body>

         <!-- Navbar -->

<%- include ("partials/navbar.ejs") -%>

  <!-- Content for Add Page -->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter The Full Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Phone Number</label>
                    <input type="number" class="form-control"
                    id="numberTextField"
                    placeholder="Enter The Phone Number"
                    name="number" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter The Email"
                    name="email" required>
                </div>

                <br>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit">Submit</i></button>

                    <a href="/name-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i>Cancel
                    </a>

            </form>
        </div>
    </div>
</div>

  <!--Bottom Nav / Footer -->

<%- include ("partials/footer.ejs") -%>

  <!-- Script -->

  <script src="/jquery/dist/jquery.min.js"></script>
  <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="/Scripts/app.js"></script>

</body>
</html>